<object clone="/usr/SID/obj/sidnode" owner="SID">
  <SID:Element ns="Socials" tag="SocialObject" recpoint="false" transient="false" delitem="delete_object(role)">
    <SID:Children>
      <SID:Child node="OBJ(SID:Socials:SocObPreps)"/>
      <SID:Child node="OBJ(SID:Socials:SocObFilters)"/>
    </SID:Children>
    <SID:Attributes>
      <SID:Attribute id="role" atype="lpc_str" areadonly="false"/>
      <SID:Attribute id="direct" atype="xml_bool" areadonly="false" aquery="query_direct(role)"/>
      <SID:Attribute id="single" atype="xml_bool" areadonly="false" aquery="query_single(role)"/>
      <SID:Attribute id="raw" atype="xml_bool" areadonly="false" aquery="query_raw(role)"/>
      <SID:Attribute id="requirement" atype="social_requirement" areadonly="false" aquery="query_requirement(role)"/>
      <SID:Attribute id="distance" atype="social_approach" areadonly="false" aquery="query_distance(role)"/>
    </SID:Attributes>
    <SID:Iterator var="role" call="query_roles"/>
    <SID:Callbacks>
      <SID:Callback call="configure_object(role, requirement, distance)"/>
      <SID:Callback call="set_direct(role, direct)"/>
      <SID:Callback call="set_raw(role, raw)"/>
      <SID:Callback call="set_single(role, single)"/>
    </SID:Callbacks>
  </SID:Element>
</object>
