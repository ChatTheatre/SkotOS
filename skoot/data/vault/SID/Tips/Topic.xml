<object clone="/usr/SID/obj/sidnode" owner="SID">
  <SID:Element ns="Tips" tag="Topic" recpoint="false" transient="false">
    <SID:Children>
      <SID:Child node="OBJ(SID:Tips:Description)"/>
    </SID:Children>
    <SID:Attributes>
      <SID:Attribute id="topic" atype="lpc_str" areadonly="false"/>
    </SID:Attributes>
    <SID:Iterator var="topic" call="query_topics"/>
    <SID:Callbacks>
      <SID:Callback call="clear_topic(topic)"/>
    </SID:Callbacks>
  </SID:Element>
</object>
