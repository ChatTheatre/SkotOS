      <Core:Property property="merry:react:scan-dob">
         X[M] /*
  D=Receive some approx-info about wounds.
*/

object wounded;
int healstart, healtime;

if( \$actor."skill:healer" \< 5 )
  return TRUE;

if(!( wounded = this."base:worn-by" ))
  return TRUE;

healstart = Int( wounded."trait:startheal" );
if( !healstart )
  return TRUE;

healtime = Int( wounded."trait:healtime" );
if( !healtime )
  return TRUE;

healtime += healstart - time();

EmitTo( \$actor, "You scan "+Describe(wounded)+"'s wound. It will take approximately " + Str( (healtime+random(2000)-1000) / 86400 ) + " days to heal." );
      </Core:Property>
      <Core:Property property="merry:react:unwear">
         X[M] string firstPerson, thirdPerson;
object env;
firstPerson= "The bandage unravels and disintegrates as you remove it, revealing ";
if (Get(\$actor, "trait:healing")) \{
   firstPerson += "a freshly opened wound.";
\} else \{
   firstPerson += "a scar.";
\}

thirdPerson= Describe(\$actor) + " removes " + Describe(this, \$actor) + ", which promptly unravels and disintegrates.";

env = Get(\$actor, "base:environment");
EmitTo(\$actor, firstPerson);
EmitIn(env, thirdPerson, \$actor);

Slay(this);
return FALSE;
