if (this."base:environment" != \$actor)
\{
 EmitTo(\$actor, "You must be holding the" + this."trait:superbrief" + " in order to do that.");
 return FALSE;
\}

level = (int)this."trait:level";

if(level \> 0)
\{
 t1 = "a quick gulp";

 if (level\>3)
 \{
  t1 = "several quick gulps";
 \}
 else if (level\>1)
 \{
  t1 = "a few quick gulps";
 \}
 EmitTo(\$actor,"With " + t1 + " you " + t2[random(3)] + " your " + this."trait:superbrief" + ". You begin to feel distinctly tipsy. Very tipsy, and you definitely need some more strong drink.");

 EmitIn(\$actor."base:environment", "With " + t1 + " " + \$actor."trait:brief" + " " + t3[random(3)] + " " + \$actor."trait:possessive" + " " + this."trait:liquid" + ".",\$actor);

/*slay this juice are replace it with a normal empty one*/

sJuice = Spawn(\$\{Generic:drink:cup-juice\});
 sJuice."base:environment" = this."base:environment";
 sJuice."trait:level" = 0;
 sJuice."trait:liquid" = "empty";

 sJuice."bilbo:auto:start:0050" = "call bilbo:react:emptysub";
 Slay(this);
 return FALSE;
\}
else
