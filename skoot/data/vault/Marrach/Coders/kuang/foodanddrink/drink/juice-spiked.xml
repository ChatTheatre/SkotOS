      <Core:Property property="merry:lib:dodrink">
         X[M] int level;
string t3,t4;
object actorEnv,sJuice;
string *levelDescs;

string * desc1;
string * desc2;
string * desc3;
string * desc4;
string * desc5;

desc1 = (\{"drink","take a drink of"\});
desc2 = (\{"drinks","takes a drink of"\});
desc3 = (\{"final","satisfied","faint"\});
desc4 = (\{"empty","polish off","quaff the last of"\});
desc5 = (\{"empties","polishes off","quaffs the last of"\});

if (this."base:environment" != \$actor)
\{
 EmitTo(\$actor, "You must be holding the " + this."trait:superbrief" + " in order to do that.");
 return FALSE;
\}

levelDescs = this."trait:levelDescs";

actorEnv = \$actor."base:environment";

level = (int)this."trait:level";

if (level \<= 0)
\{
 EmitTo(\$actor, "Alas. The " + this."trait:superbrief" + " is empty.");
 return FALSE;
\}

level--;
this."trait:level" = level;

t3="";
t4="";
if(level \<= 2)
\{
 t3 = " Good juice. So good you finish it quickly.";
 t4 = " and drinks it all in one go.";
\}

EmitTo(\$actor, "You " + (string)desc1[random(2)] + " your " + this."trait:liquid" + "." + t3);

EmitIn(actorEnv,\$actor."trait:brief" + " " + desc2[random(2)] + " " + \$actor."trait:possessive" + " " + this."trait:liquid" + t4,\$actor );

this."trait:level-desc" = levelDescs[level];

if(level \<=2)
\{
 EmitTo(\$actor , "You begin to feel distinctly tipsy. Very tipsy, and you definately need some more strong drink.");
  /*slay this juice are replace it with a normal empty one*/
 sJuice = Spawn(\$\{Generic:drink:cup-juice\});
 sJuice."base:environment" = this."base:environment";
 sJuice."trait:level" = 0;
 sJuice."trait:liquid" = "empty";

 sJuice."bilbo:auto:start:0050" = "call bilbo:react:emptysub";
 Slay(this);
\}

return FALSE;
      </Core:Property>
